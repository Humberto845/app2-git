<?xml version="1.0" encoding="utf-8"?>

<widget xmlns ="http://www.w3.org/ns/widgets"
   xmlns:gap="http://phonegap.com/ns/1.0"
   id ="com.phonegap.example2"
   version ="1.0.0">
   
  <name> app2 telefonia celular</name>
  
  <description>
  Aplicacion que muestra informacion sobre la telefonia celular
  </description>
  
  <author href="https://build.phonegap.com" email="humberto_lmfao@hotmail.com">
  	Humberto clara gomez 4"E"
  </author>
	
   <!-- Personaliza la aplicacion y plataforma -->
   <preference name="orientation" value="default" />
   <!-- <preference name="orientation" value="portrait"/>
   <prefetence name="orientation" value="landscape"/>-->
   <preference name="target-device" value="universal"/>
   <preference name="fullscreen" value="true"/>
   <perfomance name="android-installLocation" value="auto"/>
   <perfomance name="permissions" value="INTERNET"/>
   
   <!--Plugins-->
   <!--Core plugins-->
  <plugin name="cordova-plugin-device" spec="~1.1.4"/>
  <plugin name="cordova-plugin-vibration" spec="~2.1.3"/>
  <plugin name="cordova-plugin-dialogs" spec="~1.3.1"/>
  
  <!-- <plugin name="cordova-plugin-geolocation" source="npm"/>-->
  	<!-- Third part plugin -->
	
	<!-- Colocar icono app-->
	
	<!--para accesar a paginas de internet-->
	<allow-intent href="https://*/*"/>
	<acces origin="https://*/*"/>
	<allow-intent href="http://*/*"/>
	<acces origin="http://*/*"/>
	<plugin name="cordova-plugin-whitelist" source="npm"/>
	
 <icon src="res/android/mdpi.png"/>
 
 
 
 
 </widget>
   
   
   
   
  